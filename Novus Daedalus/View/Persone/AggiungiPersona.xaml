<Window x:Class="Novus_Daedalus.View.Persone.AggiungiPersona"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiungi persona" Height="202" Width="210">
    <Window.Background>
        <ImageBrush ImageSource="/Novus Daedalus;component/wallpapers/wallpaper_blue_1366x768.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Seleziona il ruolo della persona:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Ruolo_ComboBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="177">
            <ComboBoxItem Content="Indagato" IsSelected="True"/>
            <ComboBoxItem Content="Persona offesa"/>
            <ComboBoxItem Content="Persona informata"/>
        </ComboBox>
        <Button x:Name="Annulla_Button" Content="Annulla" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="26" VerticalAlignment="Bottom" Click="AnnullaButtonClick"/>
        <Button x:Name="Ok_Button" Content="Ok" HorizontalAlignment="Left" Margin="112,0,0,10" Width="75" Click="OkButtonClick" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>

<Window x:Class="Novus_Daedalus.View.Persone.AggiungiPersona"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiungi persona" Height="215" Width="236">
    <Window.Background>
        <ImageBrush ImageSource="/Novus Daedalus;component/wallpapers/wallpaper_blue_1366x768.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Seleziona il ruolo della persona:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox x:Name="Ruolo_ComboBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="205" FontSize="14">
            <ComboBoxItem Content="Indagato" IsSelected="True"/>
            <ComboBoxItem Content="Persona offesa"/>
            <ComboBoxItem Content="Persona informata"/>
        </ComboBox>
        <Button x:Name="Annulla_Button" Content="Annulla" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" VerticalAlignment="Bottom" Click="AnnullaButtonClick"/>
        <Button x:Name="Ok_Button" Content="Ok" Margin="0,0,10,10" Click="OkButtonClick" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</Window>

        <Label Content="Num. Dipartimento:" HorizontalAlignment="Left" Margin="35,324,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="Annulla_Button" Content="Annulla" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Click="Annulla_Button_Click" Height="26" VerticalAlignment="Bottom"/>
